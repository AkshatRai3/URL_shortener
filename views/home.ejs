<!DOCTYPE html>
<html lang="en">
<head>
   
    <style>
    body{
        margin: 0%;
        padding: 0%;
    font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    text-align: center;
    align-items: center;
    background-color:rgb(180, 223, 209)
    }
    table{
        border: 2px solid black;
        width: 100%;
    }
    td{
        border: 2px solid black;
    }
    #heading{
        font-size: 2.5em;
        background: linear-gradient(90deg, purple, red);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="homepage.css">
</head>
<body>
     <h1 id="heading">URL Shortener</h1>
     <% if (locals.id)  { %>
        <p>URL Generated : <a href="http://localhost:3000/url/<%=id%>">http://localhost:3000/url/<%=id%></a></p>
     <% } %>
     <div>
        <form action="/url" method="post">
            <label>Enter your original URL</label>
            <input type="text" placeholder="https://example.com" name="url">
            <button type="submit">Generate</button>
        </form>
     </div>
     <br><br>
     <div>
         <% if (locals.urls) { %>
            <table>
                <thead>
                     <th> S.No </th>
                     <th> ShortURL </th>
                     <th> Redirect </th>
                     <th> Clicks </th>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                     <tr>
                        <td><%= index +1 %></td>
                        <td><a href="http://localhost:3000/url/<%= url.shortId %>" >http://localhost:3000/url/<%= url.shortId %></a></td>
                        <td><a href=<%= url.redirectURL%>><%= url.redirectURL%></a></td>
                        <td><%= url.visitHistory.length %></td>
                     </tr>
                    <% }) %>

                    </tbody>
            </table>
         <% } %>
     </div>
</body>
</html>